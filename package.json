{
  "name": "smashpak",
  "productName": "Smashpak",
  "version": "1.0.0",
  "description": "A Minecraft resource pack resizer tool",
  "main": "dist/index.js",
  "homepage": "./",
  "repository": {
    "type": "git",
    "url": "git@github.com:GrumpyPirate/smashpak.git"
  },
  "scripts": {
    "clean": "rm -rf .cache dist/",
    "dev:start-app": "NODE_ENV=development parcel src/renderer/index.html -p 3000",
    "dev:start-electron": "NODE_ENV=development parcel build src/main/index.ts --no-minify --target electron && electron .",
    "dev": "NODE_ENV=development concurrently \"BROWSER=none npm run dev:start-app\" \"wait-on http://localhost:3000 && npm run dev:start-electron\"",
    "build:app": "parcel build src/renderer/index.html --public-url ./",
    "build:electron": "parcel build src/main/index.ts --target electron && electron-builder",
    "build": "npm run clean && npm run build:app && npm run build:electron",
    "test": "jest",
    "postinstall": "electron-builder install-app-deps"
  },
  "keywords": [],
  "author": {
    "name": "Edward Cobbold",
    "email": "edward.cobbold@gmail.com",
    "url": "https://edwardcobbold.co.uk"
  },
  "license": "ISC",
  "dependencies": {
    "@iarna/toml": "^2.2.5",
    "ansi-colors": "^4.1.1",
    "gulp": "^4.0.2",
    "gulp-bytediff": "^1.0.0",
    "gulp-filter": "^6.0.0",
    "gulp-ignore": "^3.0.0",
    "gulp-imagemin": "^7.1.0",
    "gulp-newer": "^1.4.0",
    "gulp-rename": "^2.0.0",
    "gulp-zip": "^5.0.2",
    "image-size": "^0.9.3",
    "merge-stream": "^2.0.0",
    "minimist": "^1.2.5",
    "node-notifier": "^9.0.0",
    "polished": "^4.1.0",
    "react": "^17.0.1",
    "react-dnd": "^11.1.3",
    "react-dnd-html5-backend": "^11.1.3",
    "react-dom": "^17.0.1",
    "react-feather": "^2.0.9",
    "react-use": "^17.1.0",
    "rimraf": "^3.0.2",
    "sanitize.css": "^12.0.1",
    "sharp": "^0.27.1",
    "vinyl": "^2.2.1"
  },
  "devDependencies": {
    "@babel/core": "^7.12.13",
    "@babel/preset-env": "^7.12.13",
    "@babel/preset-react": "^7.12.13",
    "@commitlint/cli": "^11.0.0",
    "@commitlint/config-conventional": "^11.0.0",
    "@types/electron-devtools-installer": "^2.2.0",
    "@types/gulp": "^4.0.8",
    "@types/gulp-filter": "^3.0.33",
    "@types/gulp-imagemin": "^7.0.1",
    "@types/gulp-newer": "0.0.31",
    "@types/gulp-rename": "^2.0.0",
    "@types/gulp-zip": "^4.0.1",
    "@types/merge-stream": "^1.1.2",
    "@types/node-notifier": "^8.0.0",
    "@types/react": "^17.0.1",
    "@types/react-dom": "^17.0.0",
    "@types/rimraf": "^3.0.0",
    "@types/sharp": "^0.27.1",
    "@types/styled-components": "^5.1.7",
    "@types/vinyl": "^2.0.4",
    "@typescript-eslint/eslint-plugin": "^4.15.0",
    "@typescript-eslint/parser": "^4.15.0",
    "autoprefixer": "^10.2.4",
    "babel-eslint": "^10.1.0",
    "babel-jest": "^26.6.3",
    "commitizen": "^4.2.3",
    "concurrently": "^5.3.0",
    "cz-conventional-changelog": "^3.3.0",
    "electron": "^11.2.3",
    "electron-builder": "^22.9.1",
    "electron-devtools-installer": "^3.1.1",
    "electron-rebuild": "^2.3.5",
    "eslint": "^7.19.0",
    "eslint-config-airbnb": "^18.2.1",
    "eslint-config-prettier": "^7.2.0",
    "eslint-config-react-app": "^6.0.0",
    "eslint-plugin-flowtype": "^5.2.0",
    "eslint-plugin-import": "^2.22.1",
    "eslint-plugin-jest": "^24.1.3",
    "eslint-plugin-jsx-a11y": "^6.4.1",
    "eslint-plugin-prettier": "^3.3.1",
    "eslint-plugin-react": "^7.22.0",
    "eslint-plugin-react-hooks": "^4.2.0",
    "eslint-plugin-testing-library": "^3.10.1",
    "jest": "^26.6.3",
    "parcel-bundler": "^1.12.4",
    "postcss-modules": "^4.0.0",
    "prettier": "^2.2.1",
    "styled-components": "^5.2.1",
    "stylelint": "^13.9.0",
    "stylelint-config-recommended": "^3.0.0",
    "stylelint-config-styled-components": "^0.1.1",
    "stylelint-processor-styled-components": "^1.10.0",
    "typescript": "^4.1.3",
    "wait-on": "^5.2.1"
  },
  "build": {
    "appId": "com.grumpypirate.smashpak",
    "asar": false,
    "files": [
      "src/main/index.ts",
      "src/renderer/assets/images/hammer.png",
      "dist/**/*"
    ],
    "mac": {
      "target": "dmg",
      "icon": "src/renderer/assets/images/hammer.png"
    },
    "win": {
      "target": "nsis",
      "icon": "src/renderer/assets/images/hammer.png"
    },
    "linux": {
      "target": "deb",
      "icon": "src/renderer/assets/images/hammer.png",
      "category": "Development"
    }
  },
  "config": {
    "commitizen": {
      "path": "./node_modules/cz-conventional-changelog"
    }
  }
}
